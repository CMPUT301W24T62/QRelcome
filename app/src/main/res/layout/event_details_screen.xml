<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Event_Page2"
    tools:context=".EventDetailsScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Event Details" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Menu1"
            android:src="@drawable/baseline_menu_24"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/Back_Button"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Event_Poster"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/baseline_add_photo_alternate_24"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_purple"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="EVENT DETAILS:" />
    </RelativeLayout>
    <EditText
        android:id="@+id/Event_Name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Event Name:"
        android:textSize="20sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/Event_Location1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Location:"
        android:textSize="20sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/Event_Date_Time1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Date / Time:"
        android:textSize="20sp"
        android:inputType="text" />
    <EditText
        android:id="@+id/Event_Description1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:layout_gravity="top|left"
        android:text="Description:"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/Event_Milestones1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Milestones:"
        android:textSize="20sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/Event_QR1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Create Promo QR code:"
            android:textSize="20sp" />
        <CheckBox
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/Event_QR1"
            android:id="@+id/Create_Promo_QR"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/Confirm_Button1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Confirm"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:id="@+id/Forward_Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Confirm_Button1"
            android:src="@drawable/baseline_arrow_forward_24" />
    </RelativeLayout>

</LinearLayout>